worker_processes auto;
worker_cpu_affinity auto;
worker_rlimit_nofile 65535;
rtmp_auto_push on;
rtmp_auto_push_reconnect 1s;

events {
    worker_connections 65535;
    multi_accept on;
    use epoll;
}

rtmp {
    server {
        listen 1935;
        listen [::]:1935 ipv6only=on;
        chunk_size 2048;        # Reduced for lower latency
        
        # Low latency optimizations with correct syntax
        max_message 1M;
        timeout 10s;            
        
        # TCP optimizations
        tcp_nodelay on;
        so_keepalive on;
        
        # Facebook Application
        application facebook {
            live on;
            record off;
            sync 10ms;
            interleave on;
            wait_key on;
            wait_video on;
            on_publish http://127.0.0.1:8080/validate?key=$name;
            push ${FACEBOOK_URL}${FACEBOOK_KEY} flashver=FMLE/3.0 live=1;
        }
        
        # Twitch Application
